<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_matching_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youngki.memory_project.matchingTest">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Please match the letter to its number."
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/textViewInstructions"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewInstructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="10"
        android:columnCount="6"
        android:layout_marginTop="28dp">

        <Space
            android:layout_width="20sp"
            android:layout_height="60sp"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="30sp"
            android:id="@+id/textViewA0" />

        <Space
            android:layout_width="20sp"
            android:layout_height="35sp"
            android:layout_column="5"
            android:layout_row="2" />

        <TextView
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="30sp"
            android:id="@+id/textViewB0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_column="0"
            android:layout_row="4" />

        <TextView
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:textSize="30sp"
            android:id="@+id/textViewC0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_column="0"
            android:layout_row="6" />

        <TextView
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:textSize="30sp"
            android:id="@+id/textViewD0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_column="0"
            android:layout_row="8" />

        <TextView
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="9"
            android:textSize="30sp"
            android:id="@+id/textViewE0" />


        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:textSize="30sp"
            android:id="@+id/textViewA1" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="3"
            android:textSize="30sp"
            android:id="@+id/textViewB1" />

        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="5"
            android:textSize="30sp"
            android:id="@+id/textViewC1" />

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="7"
            android:textSize="30sp"
            android:id="@+id/textViewD1" />

        <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="9"
            android:textSize="30sp"
            android:id="@+id/textViewE1" />


    </GridLayout>




</RelativeLayout>
