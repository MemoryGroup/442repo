<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_matching_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youngki.memory_project.matchingTest">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/matching_test_instructions"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/textViewInstructions"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/submit"
        android:textSize="22sp"
        android:onClick="onSubmitClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewInstructions"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/buttonSubmit" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewInstructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:rowCount="10"
        android:columnCount="5"
        android:id="@id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_column="4"
            android:layout_row="2" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_column="1"
            android:layout_row="4" />
        <Space
            android:layout_gravity="center_horizontal"
            android:layout_width="145sp"
            android:layout_height="40sp"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="6" />

        <Button
            android:text="@string/_A"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:background="@color/gray"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/buttonA0" />

        <Button
            android:text="@string/_B"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:background="@color/gray"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/buttonB0" />

        <Button
            android:text="@string/_C"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:background="@color/gray"
            android:layout_row="5"
            android:layout_column="0"
            android:id="@+id/buttonC0" />

        <Button
            android:text="@string/_D"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:background="@color/gray"
            android:layout_row="7"
            android:layout_column="0"
            android:id="@+id/buttonD0" />

        <Button
            android:text="@string/_0"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:background="@color/blue"
            android:layout_row="1"
            android:layout_column="4"
            android:id="@+id/buttonA1" />

        <Button
            android:text="@string/_1"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:background="@color/green"
            android:layout_row="3"
            android:layout_column="4"
            android:id="@+id/buttonB1" />

        <Button
            android:text="@string/_2"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:background="@color/red"
            android:layout_row="5"
            android:layout_column="4"
            android:id="@+id/buttonC1" />

        <Button
            android:text="@string/_3"
            android:alpha="1"
            android:layout_width="@dimen/test_button_size"
            android:layout_height="@dimen/test_button_size"
            android:textSize="@dimen/test_text_size"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:background="@color/purple"
            android:layout_row="7"
            android:layout_column="4"
            android:id="@+id/buttonD1" />

    </GridLayout>


</RelativeLayout>
