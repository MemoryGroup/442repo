<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repetition_training"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youngki.memory_project.repetitionTraining">

    <TextView
        android:text="Type the letters and numbers shown below:"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textViewInstructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/textViewInstructions"
        android:id="@+id/space1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/space1"
        android:background="@color/black"
        android:alpha="0.5"
        android:id="@+id/line" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/line"
        android:id="@+id/space2"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space2"
        android:id="@+id/tableLayout"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="A A A A A"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView0"
                android:layout_span="5"/>

            <TextView
                android:text="1 1 1 1 1"
                android:layout_span="5"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="A A"
                android:layout_column="1"
                android:layout_span="2"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:text="1 1"
                android:layout_span="2"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <TextView
                android:text="A A"
                android:layout_span="2"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <TextView
                android:text="1 1"
                android:layout_span="2"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/_A"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <TextView
                android:text="@string/_1"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />

            <TextView
                android:text="@string/_A"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />

            <TextView
                android:text="@string/_1"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />

            <TextView
                android:text="@string/_A"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />

            <TextView
                android:text="@string/_1"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />

            <TextView
                android:text="@string/_A"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />

            <TextView
                android:text="@string/_1"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />

            <TextView
                android:text="@string/_A"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14" />

            <TextView
                android:text="@string/_1"
                android:textSize="@dimen/repetition_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="@dimen/repetition_text_space"
                android:layout_height="match_parent" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:text="A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button0" />

            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button1" />

        </TableRow>

        <TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="audio0"
                android:id="@+id/audio0"
                android:onClick="onAudioSelectClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="audio1"
                android:id="@+id/audio1"
                android:onClick="onAudioSelectClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="audio2"
                android:id="@+id/audio2"
                android:onClick="onAudioSelectClick"/>

        </TableRow>


    </TableLayout>


</RelativeLayout>
