<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flashcardimage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youngki.memory_project.MainActivity">

  <Button
      android:id="@+id/numberButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="150dp"
      android:layout_marginLeft="30dp"
      android:background="@drawable/button_shape"
      android:text="Number"
      android:textSize="@dimen/activity_horizontal_margin"/>
  <Button
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="80dp"
      android:layout_marginLeft="30dp"
      android:background="@drawable/button_shape"
      android:onClick="onStartButtonClicked"
      android:text="train"
      android:textSize="@dimen/activity_horizontal_margin"/>

  <Button
      android:id="@+id/button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignTop="@+id/button"
      android:layout_marginRight="30dp"
      android:background="@drawable/button_shape"
      android:nestedScrollingEnabled="false"
      android:onClick="onTestButtonClicked"
      android:text="@string/test"
      android:textSize="@dimen/activity_horizontal_margin"/>

  <Button
      android:id="@+id/button4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/button2"
      android:layout_alignRight="@+id/button2"
      android:layout_alignTop="@+id/button3"
      android:background="@drawable/button_shape"
      android:onClick="onHelpButtonClicked"
      android:text="help"
      android:textSize="@dimen/activity_horizontal_margin"/>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/button2"
      android:layout_alignLeft="@+id/button"
      android:layout_alignParentTop="true"
      android:layout_alignRight="@+id/button2"
      android:layout_alignStart="@+id/button"
      android:layout_marginTop="110dp"
      android:gravity="center_horizontal"
      android:text="Memory Project"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textSize="@dimen/MemoryProjectFontSize"
      />

  <Button
      android:id="@+id/button3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/button"
      android:layout_alignStart="@+id/button"
      android:layout_below="@+id/button2"
      android:layout_marginTop="13dp"
      android:background="@drawable/button_shape"
      android:text="Score"
      android:textSize="@dimen/activity_horizontal_margin"/>

</RelativeLayout>
