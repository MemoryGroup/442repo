        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

    <View
            android:alpha="0"
            android:transformPivotX="107dp"
            android:transformPivotY="11dp"
            android:rotation="180.0"
            android:layout_gravity="center_horizontal"
            android:layout_width="190dp"
            android:layout_height="3dp"
            android:id="@+id/lineA1A0"
            android:background="@color/blue" />

        <View
            android:alpha="0"
            android:transformPivotX="105dp"
            android:transformPivotY="25dp"
            android:rotation="160.5"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="3dp"
            android:id="@+id/lineA1B0"
            android:background="@color/blue" />

        <View
            android:alpha="0"
            android:transformPivotX="115dp"
            android:transformPivotY="34dp"
            android:rotation="144.5"
            android:layout_gravity="center_horizontal"
            android:layout_width="285dp"
            android:layout_height="3dp"
